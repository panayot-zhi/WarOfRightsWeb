<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - 1st USSS Co.F</title>

    <link rel="shortcut icon" href="favicon.ico">
    @*<link href="~/css/wor.css?family=Roboto+Slab" rel="stylesheet" type="text/css">*@
    <link href="~/css/wor.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

    <script src="~/lib/jquery/jquery.min.js"></script>

    @await RenderSectionAsync("head", required: false)

</head>
<body>

    <div id="shadow">
        <div id="body">
            <div id="outerWrapper">

                <div id="wrapper">
                    <div id="nailContainer">
                        <img src="~/img/Nail.png" id="nailLeft" alt="nail">
                        <img src="~/img/Nail.png" id="nailRight" alt="nail">
                    </div>

                    <header>
                        <a href="/">
                            <p class="worBorder">
                                1<small>st</small> USSS Co.F
                            </p>
                            <img src="~/img/Header.png" alt="War of Rights Header" class="worBorder">
                        </a>
                    </header>

                    <nav id="navigationContainer" class="worBorder">

                        <ul>
                            <li>
                                <a id="navHome" href="/">Home</a>
                            </li>
                            <li>
                                <a id="navNews" href="/">Maps</a>
                            </li>
                            <li>
                                <a id="navMedia" href="/">Media</a>
                            </li>
                            <li>
                                <a href="/">Forum</a>
                            </li>
                            <li>
                                <a id="navFAQ" href="/">FAQ</a>
                            </li>
                            <li>
                                <a id="navContact" href="/">Contact</a>
                            </li>
                        </ul>

                    </nav>

                    <div id="companyToolHeaderContainer" class="worBorder">
                        <h1 class="text-center">
                            Karlsen' Sharps
                        </h1>
                    </div>

                    <div class="worBorder CT_Background">
                        @RenderBody()
                    </div>

                    <footer class="worBorder" id="footer">
                        TODO
                    </footer>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
