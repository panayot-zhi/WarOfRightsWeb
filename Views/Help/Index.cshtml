@{
    ViewData["Title"] = "Home";
}

@section navigation {
    
    @{
        var tip = Misc.RandomTip();
        var height = tip.Length > 80 ? "100px" : "60px";
    }

    <nav id="companyToolHeaderContainer" class="worBorder" style="padding: 0px;">

        <div style="margin: 0px; padding: 0px;">
            <ul style="margin: 0px; padding: 0px; height: @height;">
                <li style="margin: 0px;">
                    <div id="companyToolHeaderTextContainer">

                        <ul class="companyToolNavUl" style="width: 100%; padding-top: 4px;">
                            <li>
                                <h1 class="text-center">
                                    @tip
                                </h1>
                            </li>
                        </ul>

                    </div>
                </li>
            </ul>
            <div class="fancyClearBoth">
            </div>
        </div>
    </nav>
}

<div id="contentWrapper">
    
    <div id="tableOfContents" class="fancyLeft">
        <h2 class="text-center">
            Table of Contents
        </h2>
        <ul>
            <li>
                <h3>
                    Main 1
                </h3>
                <ul>
                    <li>
                        <p>
