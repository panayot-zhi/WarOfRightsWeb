@{
    ViewBag.Title = Maps.DrillCampUSA;

    var map = Maps.DrillCampUSA;
    var dateTime = Maps.DateTimes[map];
    var image = Url.Content($"~/img/maps/{map}.png");
    var imageLoading = Url.Content($"~/img/maps/{map}_loading.png");
}

@section navigation {
    @await Html.PartialAsync("_MapsNav")
}

<h2 class="contentTitle" id="tabTitle">Union Drill Camp</h2>

<div id="mapHistory" class="fancyClearBoth">

    <h2 class="text-right">History</h2>

</div>

<h2 class="text-right">@Maps.DateTimes[Maps.DrillCampUSA]</h2>
<a href="@Url.Content($"~/img/maps/{Maps.DrillCampUSA}.png")" target="_blank">
    <img src="@Url.Content($"~/img/maps/{Maps.DrillCampUSA}.png")" class="imageMaxWidth">
</a>

<p></p>

<a href="@Url.Content($"~/img/maps/{Maps.DrillCampUSA}_loading.png")" target="_blank">
    <img src="@Url.Content($"~/img/maps/{Maps.DrillCampUSA}_loading.png")" class="imageMaxWidth">
</a>

<h2 class="text-right">Belligerents</h2>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#navMaps").addClass('active');
            $("#navMapDrillCamps").addClass('active');
        })
    </script>
}
