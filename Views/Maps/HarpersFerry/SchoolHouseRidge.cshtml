@{
    ViewBag.Title = Maps.SchoolHouseRidge;
}

@section navigation {
    @await Html.PartialAsync("_MapsNav")
}

<h2 class="contentTitle" id="tabTitle">School House Ridge</h2>

<div id="mapHistory" class="fancyClearBoth">

    <h2 class="text-right">History</h2>

</div>

<h2 class="text-right">@Maps.DateTimes[Maps.Normalize(Maps.SchoolHouseRidge)]</h2>
<a href="@Url.Content($"~/img/maps/{Maps.Normalize(Maps.SchoolHouseRidge)}.png")" target="_blank">
    <img src="@Url.Content($"~/img/maps/{Maps.Normalize(Maps.SchoolHouseRidge)}.png")" class="imageMaxWidth">
</a>

<h2 class="text-right">Belligerents</h2>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#navMaps").addClass('active');
            $("#navMapHarpersFerry").addClass('active');
        })
    </script>
}
