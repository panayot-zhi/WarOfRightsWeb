@model WarOfRightsWeb.Data.Map

@{
    var mapID = Model.ID;
    var mapName = Model.Name;
    var dateTime = Model.DateTimeDescription;

    var spawnImage = Url.Content($"~/img/{Extensions.PathToUrl(Model.SpawnImagePath)}");
    var imageSkirmish = Url.Content($"~/img/{Extensions.PathToUrl(Model.SkirmishImagePath)}");
    var loadingImage = Url.Content($"~/img/{Extensions.PathToUrl(Model.LoadingImagePath)}");

    ViewBag.Title = mapName;
}

@section navigation {
    @await Html.PartialAsync("_MapsNav")
}

<h2 class="contentTitle" id="tabTitle">Bolivar Heights Redoubt</h2>

<div id="mapHistory" class="fancyClearBoth">

    <h2 class="text-right">History</h2>

</div>

<h2 class="text-right">@dateTime</h2>
<a href="@spawnImage" target="_blank">
    <img src="@spawnImage" class="imageMaxWidth">
</a>

<p></p>

<a href="@loadingImage" target="_blank">
    <img src="@loadingImage" class="imageMaxWidth">
</a>

@await Html.PartialAsync("_MapDetails", Model)

<div id="galleryImagesContainer">
    <h1 class="text-center">
        Ingame images of the map
    </h1>

    <div id="galleryImages">
        <a href="#" class="active" data-src="https://warofrights.com/Pages_FieldReports/Update166/Images/Rigby_Battery_1-min.jpg">
            <img class="galleryImageContainer worTightBorder" src="https://warofrights.com/Pages_FieldReports/Update166/Images/Rigby_Battery_1-min.jpg" alt="Rigby’s Battery (USA), Bolivar Heights Redoubt, Harpers Ferry">
        </a>
        <a href="#" data-src="https://warofrights.com/Pages_FieldReports/Update166/Images/Rigby_Battery_2-min.jpg">
            <img class="galleryImageContainer worTightBorder" src="https://warofrights.com/Pages_FieldReports/Update166/Images/Rigby_Battery_2-min.jpg" alt="Rigby’s Battery (USA), Bolivar Heights Redoubt, Harpers Ferry">
        </a>
    </div>
    <div class="fancyClearBoth">
    </div>
</div>

@await Html.PartialAsync("_Gallery")

@section scripts {
    <script>
        $(document).ready(function () {
            $("#navMaps").addClass('active');
            $("#navMapHarpersFerry").addClass('active');
        })
    </script>
}
