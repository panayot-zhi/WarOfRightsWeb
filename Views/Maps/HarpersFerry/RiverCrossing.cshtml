@model WarOfRightsWeb.Data.Map

@{
    var mapID = Model.ID;
    var mapName = Model.Name;
    var dateTime = Model.DateTimeDescription;

    var spawnImage = Url.Content($"~/img/{Model.SpawnImagePath}");
    var imageSkirmish = Url.Content($"~/img/{Model.SkirmishImagePath}");
    var loadingImage = Url.Content($"~/img/{Model.LoadingImagePath}");

    ViewBag.Title = mapName;
}

@section navigation {
    @await Html.PartialAsync("_MapsNav")
}

<h2 class="contentTitle" id="tabTitle">River Crossing</h2>

<div id="mapHistory" class="fancyClearBoth">

    <h2 class="text-right">History</h2>

</div>

<h2 class="text-right">@dateTime</h2>
<a href="@spawnImage" target="_blank">
    <img src="@spawnImage" class="imageMaxWidth">
</a>

<p></p>

<a href="@loadingImage" target="_blank">
    <img src="@loadingImage" class="imageMaxWidth">
</a>

@await Html.PartialAsync("_MapTeams", Model)

<div id="galleryImagesContainer">
    <h1 class="text-center">
        Ingame images of the map
    </h1>

    <div id="galleryImages">
        <a href="#" class="active" data-src="https://warofrights.com/Pages_FieldReports/Update166/Images/Manly_Battery_1-min.jpg">
            <img class="galleryImageContainer worTightBorder" src="https://warofrights.com/Pages_FieldReports/Update166/Images/Manly_Battery_1-min.jpg" alt="Manly’s Battery (CSA), Available in all of the downtown skirmish areas, Harpers Ferry">
        </a>
        <a href="#" data-src="https://warofrights.com/Pages_FieldReports/Update166/Images/Manly_Battery_2-min.jpg">
            <img class="galleryImageContainer worTightBorder" src="https://warofrights.com/Pages_FieldReports/Update166/Images/Manly_Battery_2-min.jpg" alt="Manly’s Battery (CSA), Available in all of the downtown skirmish areas, Harpers Ferry">
        </a>
    </div>
    <div class="fancyClearBoth">
    </div>
</div>

@await Html.PartialAsync("_Gallery")

@section scripts {
    <script>
        $(document).ready(function () {
            $("#navMaps").addClass('active');
            $("#navMapHarpersFerry").addClass('active');
        })
    </script>
}
